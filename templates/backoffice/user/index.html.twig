{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1 class="text-uppercase">User index</h1>

    <a class="btn btn-outline-light text-uppercase" href="{{ path('app_backoffice_user_new') }}">Create new</a>

    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th class="text-center">Id</th>
                <th class="text-center">Name</th>
                <th class="text-center">Email</th>
                <th class="text-center">Address</th>
                <th class="text-center">Zip_code</th>
                <th class="text-center">Roles</th>
                <th class="text-center">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td class="align-middle text-center">{{ user.id }}</td>
                {# Lien ci_dessous renvoie au d√©tails de la commande de l'utilisateur #}
                <td class="align-middle text-center"><a href="#">{{ user.name }}</a></td>
                <td class="align-middle text-center">{{ user.email }}</td>
                <td class="align-middle text-center">{{ user.address }}</td>
                <td class="align-middle text-center">{{ user.zipCode }}</td>
                <td class="align-middle text-center">{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td class="align-middle text-center">
                    <a class="btn btn-outline-light text-uppercase" href="{{ path('app_backoffice_user_show', {'id': user.id}) }}">show</a>
                    <a class="btn btn-outline-light text-uppercase" href="{{ path('app_backoffice_user_edit', {'id': user.id}) }}">edit</a>
                    <td class="align-middle text-center" id="delete">{{ include('backoffice/user/_delete_form.html.twig') }}</td>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
