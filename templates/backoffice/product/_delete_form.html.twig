<form method="post" action="{{ path('app_backoffice_product_delete', {'id': product.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
    <button class="btn btn-outline-light mb-2 d-flex text-uppercase">Delete</button>
</form>
