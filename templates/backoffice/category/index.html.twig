{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1 class="text-uppercase">Category index</h1>

    <a class="btn btn-outline-light text-uppercase" href="{{ path('app_backoffice_category_new') }}">Create new</a>


    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th class="text-center">Id</th>
                <th class="text-center">Name</th>
                <th class="text-center">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td class="align-middle text-center">{{ category.id }}</td>
                <td class="align-middle text-center">{{ category.name }}</td>
                <td class="align-middle text-center">
                    <a class="btn btn-outline-light text-uppercase" href="{{ path('app_backoffice_category_show', {'id': category.id}) }}">show</a>
                    <a class="btn btn-outline-light text-uppercase" href="{{ path('app_backoffice_category_edit', {'id': category.id}) }}">edit</a>
                    <td class="align-middle text-center" id="delete">{{ include('backoffice/category/_delete_form.html.twig') }}</td>
                </td>
            </tr>
            
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
