{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1 class="text-uppercase">Category</h1>

    {{ include('backoffice/category/_delete_form.html.twig') }}

    <a class="btn btn-outline-light text-uppercase mb-2" href="{{ path('app_backoffice_category_index') }}">back to list</a>

    <a class="btn btn-outline-light text-uppercase mb-2" href="{{ path('app_backoffice_category_edit', {'id': category.id}) }}">edit</a>

    <table class="table table-dark table-striped">
