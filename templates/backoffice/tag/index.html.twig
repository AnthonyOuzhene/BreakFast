{% extends 'base.html.twig' %}

{% block title %}Tag index{% endblock %}

{% block body %}
    <h1 class="text-uppercase">Tag index</h1>

    <a class="btn btn-outline-light text-uppercase" href="{{ path('app_backoffice_tag_new') }}">Create new</a>

    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th class="text-center">Id</th>
                <th class="text-center">Name</th>
                <th class="text-center">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                <td class="align-middle text-center">{{ tag.id }}</td>
                <td class="align-middle text-center">{{ tag.name }}</td>
                <td class="align-middle text-center">
                    <a class="btn btn-outline-light text-uppercase" href="{{ path('app_backoffice_tag_show', {'id': tag.id}) }}">show</a>
                    <a class="btn btn-outline-light text-uppercase" href="{{ path('app_backoffice_tag_edit', {'id': tag.id}) }}">edit</a>
                </td>
                <td class="align-middle text-center">
                    {{ include('backoffice/tag/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
